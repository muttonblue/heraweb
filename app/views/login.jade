doctype html
html(lang="en")
  head 
    title= 'Login'

    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css', 
      integrity='sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ', 
      crossorigin='anonymous', rel='stylesheet')
    link(href='/css/signin.css', rel='stylesheet')

  body
    block content 
    .container
      form.form-signin(name='logout', method='POST', action='/heraapp/login')
        h2.form-signin-heading Welcome to Hera
        label.sr-only(for='email') Email address
        input#inputEmail.form-control(name='email' , type='email', placeholder='Email address', required='', autofocus='',
          value='muttonblue@gmail.com')
        label.sr-only(for='inputPassword') Password
        input#inputPassword.form-control(name='password', type='password', placeholder='Password', required='' , 
          value='1234')
        .checkbox
          label
            input(name='remember', type='checkbox', value='remember')
            |  Remember me
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in

  footer.footer
    .container
      p.text-muted @Mockup version 1.0.1

block scripts
  script(src='/js/login.js')
